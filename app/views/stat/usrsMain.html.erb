<h1>Users</h1>

<form method="GET" action="/stat/usrsMain">
<label for="find">Name: </label>
<%= text_field_tag 'name' %><br>
<%= submit_tag 'Find', :name => 'find', :class => 'btn btn-normal' %>
</form>
<%= @usr %>
<p>-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>

<h1>Results</h1>
<% if @showByDate %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Users</th>
      <th>Fanpages</th>      
	<th>All</th>
	<th>Action</th>

    </tr>
  </thead>
  <tbody>
    <% for usr in @usrs %>
	
      <% usr_date = truncate((usr["_id"]["data"]).to_s , :length => 10, :omission => '') %>
      <tr>
        <td><%= usr_date %></td>
	  <td><%= usr["value"]["User"] %></td>
	  <td><%= usr["value"]["Fanpage"] %></td>	  
	  <td><%= usr["value"]["all"] %></td>
	  <td>
		<%= form_tag("/stat/usrsDetails", method: "get") do %>
		<%= hidden_field_tag(:date, usr_date ) %>
		<%= submit_tag("Details", {:name => "", :class => 'btn btn-mini'}) %>
		<% end %>
	  </td>

      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
	<th>Created at</th>
      <th>Link</th>
      <th>Email</th>
      <th>Type</th>
	<th>Fanpages / Admins</th>

    </tr>
  </thead>
  <tbody>
    <% for usr in @usrs %>
      
      <tr>
        <td><%= usr[0][1] %></td>
        <td><%= (usr[6][1].to_s)[0,10] %></td>
	  <td><a href=<%=usr[1][1]%> target="_blank">Link</a></td>
	  <td><%= truncate(usr[2][1], :length => 35) %></td>
	  <td><%= usr[3][1] %></td>
	  
	  <td>
		<% usr[4][1].each do |key| %>
			<a href=<%= key[0][1] %> target="_blank"><%= key[0][0] %></a>
			<br>
		<% end %>
	  </td>
	  

      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

