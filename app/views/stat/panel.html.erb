<h1>Panel</h1>


<form method="GET" action="/stat/panel">
<label for="last">Last: </label>
<%= number_field_tag 'numberOfDays', 7, in: 1...366 %>
<label for="days"> days</label><br><br>
<%= submit_tag 'Show', :name => 'last' %>
</form>

<p>-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>

<h1>Results</h1>

<table>
<% for activity in @activities %>
	<tr>
		<td><b>date:  </b><%= truncate((activity["_id"]["data"]).to_s , :length => 10, :omission => '') %></td>
		<td><b>all: </b><%= activity["value"]["count"]["all"] %></td>
		<td><b>web: </b><%= activity["value"]["count"]["web"] %></td>
		<td><b>android: </b><%= activity["value"]["count"]["android"] %></td>
		<td><b>ios: </b><%= activity["value"]["count"]["ios"] %></td>
		<td><b>unknown: </b><%= activity["value"]["count"]["unknown"] %></td>
	</tr>
	
<% end %>
</table>




