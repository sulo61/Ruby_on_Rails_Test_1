<h1>Panel</h1>


<form method="GET" action="/stat/panel">
<label for="last">Last: </label>
<%= number_field_tag 'numberOfDays', 7, in: 1...366 %>
<label for="days" > days</label><br><br>
<%= submit_tag 'Show', :name => 'last', :class => 'btn btn-small' %>
</form>

<p>-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>

<h1>Results</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Data</th>
      <th>All</th>
      <th>Web</th>
      <th>Android</th>
	<th>iOS</th>
	<th>Unknown</th>
	<th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for activity in @activities %>
      <tr>
        <td><%= truncate((activity["_id"]["data"]).to_s , :length => 10, :omission => '') %></td>
	  <td><%= activity["value"]["count"]["all"] %></td>
	  <td><%= activity["value"]["count"]["web"] %></td>
	  <td><%= activity["value"]["count"]["android"] %></td>
	  <td><%= activity["value"]["count"]["ios"] %></td>
	  <td><%= activity["value"]["count"]["unknown"] %></td>
	  <td><%= link_to 'Details', nil, :class => 'btn btn-mini' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


