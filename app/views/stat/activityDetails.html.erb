<h1>Activity: details for <%= @showdate %></h1>
<br><br>
<form method="GET" action="/stat/activityMain">
<%= submit_tag 'Back', :name => 'back', :class => 'btn btn-small' %>
</form>
<%= @authorid %>
<%= @logs %>
<%= @rowne %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Time</th>
			<th>Link</th>
			<th>Discipline</th>
			<th>Author</th>
			<th>Client</th>
			<th>Enrolled</th>
			<th>Repeat</th>
			<th>Email</th>
			<th>Type</th>
			<th>State</th>

		</tr>
	</thead>
  	<tbody>
		<% @activityDetails.each do |activity| %>
		<tr>
        
			<td><%= activity[0][1] %></td>
			<td><a href=<%=activity[1][1]%> target="_blank" >Link</a></td>
			<td><%= activity[2][1] %></td>
			<td><%= activity[3][1] %></td>
			<td><%= activity[4][1] %></td>
			<td><%= activity[5][1] %></td>
			<td><%= activity[6][1] %></td>
			<td><%= truncate(activity[7][1], :length => 30) %></td>
			<td><%= activity[8][1] %></td>
			<td><%= activity[10][1] %></td>


	  
	      </tr>
		<% end %>
 	</tbody>
</table>

