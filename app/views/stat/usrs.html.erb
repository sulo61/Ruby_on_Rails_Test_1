<h1>Users</h1>

<form method="GET" action="/stat/usrs">
<label for="find">Name: </label>
<%= text_field_tag 'name' %><br>
<%= submit_tag 'Find', :name => 'find', :class => 'btn btn-normal' %>
</form>
<%= @usr %>
<p>-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>

<h1>Results</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Email</th>
      <th>Type</th>
	<th>Fanpages / Admins</th>

    </tr>
  </thead>
  <tbody>
    <% for usr in @usrs %>
      
      <tr>
        <td><%= usr %></td>
	  
	  

      </tr>
    <% end %>
  </tbody>
</table>
